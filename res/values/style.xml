<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn" >
        <item name="android:textColor" >@color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
    <style name="card_item">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="card" >
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerPadding">4dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:background">@drawable/card_back</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="background" >
        <item name="android:background">@color/lightgray</item>
    </style>
    <style name="card_list" parent="background">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="my_text_medium" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="title_text" parent="my_text_medium">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="sub_text" parent="my_text_medium">
        <item name="android:textColor">@color/darkgray</item>
    </style>
    <style name="blue_text" parent="my_text_medium">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="my_text_small" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>
    <style name="stroke_btn">
        <item name="android:textColor">@color/logo_blue</item>
        <item name="android:background">@drawable/btn_stoke</item>
    </style>
    <style name="name_input">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="password_input" >
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>