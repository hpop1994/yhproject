<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="297dp"
            android:id="@+id/listView2" android:layout_gravity="center_horizontal"
            android:divider="@android:drawable/divider_horizontal_bright" android:dividerHeight="2dp"
            android:layout_alignParentTop="true" android:layout_above="@+id/editText"
            android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText" android:hint="1"
            android:layout_alignParentLeft="true" android:layout_above="@+id/editText2"
            android:layout_toLeftOf="@+id/button1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" android:layout_gravity="center_horizontal" android:hint="2"
            android:layout_above="@+id/editText3" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3" android:layout_gravity="center_horizontal" android:hint="3"
            android:layout_above="@+id/editText4" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button3"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4" android:layout_gravity="center_horizontal" android:hint="4"
            android:layout_above="@+id/button" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button4"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            android:id="@+id/button" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/button1" android:layout_above="@+id/editText2" android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/editText"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/button2" android:layout_alignParentRight="true"
            android:layout_above="@+id/editText3" android:layout_toRightOf="@+id/editText"
            android:layout_below="@+id/editText"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/button3" android:layout_alignTop="@+id/editText3" android:layout_alignParentRight="true"
            android:layout_above="@+id/editText4"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/button4" android:layout_below="@+id/editText3" android:layout_alignParentRight="true"
            android:layout_above="@+id/button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:id="@+id/addbutton"
            android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/acButton"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addEditText"
            android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/button"
            android:layout_toRightOf="@+id/addbutton"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ac"
                android:id="@+id/acButton"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"/>
</RelativeLayout>