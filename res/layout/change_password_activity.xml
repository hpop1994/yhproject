<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" style="@style/list_container.one_group">
    <RelativeLayout
            style="@style/list_item">
        <EditText
                android:id="@+id/old_password"
                android:inputType="textPassword" android:singleLine="true"
                style="@style/list_item_full_line_view" android:hint="旧 密 码"
                android:background="@null" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
            style="@style/list_item">
        <EditText
                android:inputType="textPassword"
                android:id="@+id/new_password" style="@style/list_item_full_line_view"
                android:singleLine="true" android:hint="新 密 码"
                android:background="@null" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
            style="@style/list_item">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/password_again" style="@style/list_item_full_line_view"
                android:singleLine="true" android:hint="再次输入" android:background="@null"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="更改"
                android:id="@+id/confirm"
                android:textColor="@color/white"
                android:background="@drawable/btn_green" android:paddingLeft="10dp" android:paddingRight="10dp"
                android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp" android:layout_marginRight="100dp"/>
    </RelativeLayout>
</LinearLayout>