<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/lightgray">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/card_back" android:divider="@drawable/divider" android:dividerPadding="5dp"
            android:showDividers="middle">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" android:layout_gravity="center_horizontal">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/old_password" android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp" android:inputType="textPassword" android:singleLine="true"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="20dp" android:hint="旧密码"
                    android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" android:layout_gravity="center_horizontal" android:paddingLeft="20dp"
                android:paddingRight="20dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/new_password" android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:singleLine="true" android:layout_alignParentLeft="true" android:hint="新密码"
                    android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp" android:background="@null">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password_again" android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp" android:singleLine="true" android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp" android:hint="再次输入新密码" android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="确定"
                    android:id="@+id/confirm"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_green" android:paddingLeft="10dp" android:paddingRight="10dp"
                    android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="22dp" android:layout_marginRight="100dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>